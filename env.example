# =============================================
# ADVANCED SURVEYGUY - ENVIRONMENT VARIABLES
# =============================================

# ==================
# SUPABASE
# ==================
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# ==================
# EMAIL SERVICE (Resend)
# ==================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Email Addresses (all using official Gmail)
SUPPORT_EMAIL=infoajumapro@gmail.com
CONTACT_EMAIL=infoajumapro@gmail.com
EVENTS_EMAIL=infoajumapro@gmail.com
NOREPLY_EMAIL=infoajumapro@gmail.com

# ==================
# OPTIONAL: Alternative Email Services
# ==================

# SendGrid (if using as backup)
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# AWS SES (if using)
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY=AKIA...
# AWS_SES_SECRET_KEY=...

# ==================
# APPLICATION
# ==================
NODE_ENV=development
PORT=3000

# ==================
# FEATURES
# ==================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_EVENTS=true

# ==================
# CONTACT INFORMATION
# ==================
REACT_APP_SUPPORT_PHONE=+233249739599
REACT_APP_TECHNICAL_PHONE=+233506985503
REACT_APP_LOCATION="Accra, Ghana"

# ==================
# SUPABASE EDGE FUNCTIONS (for deployment)
# ==================
# These are set via: supabase secrets set KEY=VALUE
# - SUPABASE_URL (auto-set by Supabase)
# - SUPABASE_SERVICE_ROLE_KEY (auto-set by Supabase)
# - RESEND_API_KEY (must be set manually)

# ==================
# SECURITY
# ==================
# Rate limiting (requests per minute)
RATE_LIMIT_CONTACT_FORM=5
RATE_LIMIT_EMAIL=10

# ==================
# MONITORING
# ==================
REACT_APP_SENTRY_DSN=
REACT_APP_ANALYTICS_ID=

